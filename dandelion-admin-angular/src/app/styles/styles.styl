@import './reset.styl';
@import './table-base.styl';
@import './mixin.styl';
// 组件的样式文件
@import '../components/components.styles.styl';

body, html {
  bgc(base-bgc);
  min-height: 600px;
}

a {
  cursor: pointer;
  user-select: none;
  color: able-click-tag-color;

  :hover, :visited {
    color: able-click-tag-colorVisited;
  }
}

// common
.filter-wrap, .table-wrap, .detail-wrap, .item-wrap {
  padding: 20px;
}

.ant-table-thead>tr>th>div {
  text-align: center;
}
