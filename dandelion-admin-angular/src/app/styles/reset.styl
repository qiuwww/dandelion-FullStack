/* reset.css */
/* 这个要根据不同的项目的风格来调整，重置样式 */
body, ul, ol, dl, dd, h1, h2, h3, h4, h5, h6, p, input, select, textarea, form {
  margin: 0;
  padding: 0;
}

body {
  font: 14px / 1.5 'Microsoft YaHei';
}

img {
  border: none;
}

ul, ol {
  list-style: none;
}

input, select, textarea {
  outline: none;
}

textarea {
  resize: none;
}

a {
  text-decoration: none;
}

i {
  display: inline-block;
  font-style: normal;
}

th, td {
  padding: 0;
}

/* 清浮动 */
.clearfix:after {
  content: '.';
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.clearfix {
  zoom: 1;
}

/* * 重置表格元素 * */
table {
  border-collapse: collapse;
  border-spacing: 0;
}

/* 水平居中 */
.center {
  margin: 0 auto;
}

/* html5 css */
article, aside, dialog, footer, header, section, footer, nav, figure, menu { /* search.css */
  display: block;
}

/* search.css */
/* 统一为标准盒模型，但是在ie7及以下不认 */
* {
  box-sizing: border-box;
}

.w100 {
  width: 100%;
}

html, body {
  width: 100%;
  height: 100%;
}
button,
input{
  outline: none;
}
.cp {
  cursor: pointer;
}

.fl {
  display: flex;
  justify-content: flex-start;
}

/* 单行文本溢出 */
.ellipsis {
  overflow: hidden;
  /* 文本溢出显示省略号 */
  text-overflow: ellipsis;
  /* 文本不会换行（单行文本溢出） */
  white-space: nowrap;
}
