@import '../../styles/mixin.styl';

pagination-item-size = 32px;
border-radius-base = 4px;

.aa-pagination {
  {cv};
  margin: 20px 0;
  justify-content: flex-end;

  &-total-text {
    margin-right: 10px;
  }

  &-item {
    cursor: pointer;
    border-radius: border-radius-base;
    user-select: none;
    min-width: pagination-item-size;
    height: pagination-item-size;
    line-height: pagination-item-size - 2px;
    text-align: center;
    list-style: none;
    display: inline-block;
    vertical-align: middle;
    border: border-base;
    background-color: content-bgc;
    margin-right: 8px;
    font-family: 'Arial';
    outline: 0;
    {ct};

    a {
      text-decoration: none;
      color: text-base-color;
      transition: none;
      margin: 0 6px;
      {cv};
    }

    &:focus, &:hover {
      transition: all 0.3s;
      border-color: primary-color;

      a {
        color: primary-color;
      }
    }

    &-active {
      border-color: primary-color;
      font-weight: 500;

      a {
        color: primary-color;
      }

      &:focus, &:hover {
        border-color: primary-color;
      }

      &:focus a, &:hover a {
        color: primary-color;
      }
    }
  }

  &-jump-prev {
    margin-right: 8px;
  }

  &-prev, &-next {
    i {
      color: text-base-color;
      font-size: 14px;
      font-weight: 300;
    }
  }

  &-options-quick-jumper {
    height: pagination-item-size;
    line-height: @height;

    input {
      padding: 1px 7px;
      height: 100%;
      width: 44px;
      border-radius: border-radius-base;
      outline: none;
      border: border-base;
    }
  }

  &-prev, &-jump-prev, &-jump-next {
    margin-right: 8px;
    width: pagination-item-size;
    height: pagination-item-size;
    line-height: pagination-item-size;
    {ct};
  }

  &-jump-prev, &-jump-next {
    outline: 0;

    .aa-pagination-item-container {
      position: relative;

      .aa-pagination-item-link-icon {
        color: primary-color;
        letter-spacing: -1px;
        opacity: 0;
        transition: all 0.2s;

        &-svg {
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          margin: auto;
        }
      }

      .aa-pagination-item-ellipsis {
        position: absolute;
        display: block;
        letter-spacing: 2px;
        color: disabled-color;
        text-align: center;
        opacity: 1;
        transition: all 0.2s;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
      }
    }

    &:focus, &:hover {
      .aa-pagination-item-link-icon {
        opacity: 1;
      }

      .aa-pagination-item-ellipsis {
        opacity: 0;
      }
    }
  }
}
