.aa-button {
  margin-right: 8px;
  margin-bottom: 12px;
  padding: 0 20px;
  cursor: pointer;

  &-primary {
    color: #fff;
    background-color: #1890ff;
    border-color: #1890ff;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.12);
    box-shadow: 0 2px 0 rgba(0, 0, 0, 0.045);

    span {
      color: #fff;
    }
  }

  &-default {
    background-color: #fff;

    span {
      color: #333;
    }
  }
}
